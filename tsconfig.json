{
    "include": [
        "./src/**/*",
        "./src/custom.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "models/*": [
                "./src/models/*"
            ],
            "game/*": [
                "./src/models/game/*"
            ],
            "event/*": [
                "./src/core/events/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "core/*": [
                "./src/core/*",
            ],
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    }
}