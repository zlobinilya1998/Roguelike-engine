{
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "models/*": [
                "src/models/*"
            ],
            "game/*": [
                "src/models/game/*"
            ],
            "event/*": [
                "src/models/events/*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "utils/*": [
                "src/utils/*"
            ],
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    }
}